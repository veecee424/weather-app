{{>header}}

    <form class="form" method="POST" action="/weather">
        <input id="location" name="address" placeholder="Enter location">
        <button type="submit" id="search">Forecast</button>
    </form>
    <div class="forecastDiv">
        <p class="spanForecast">{{locationTag}}{{location}}</p>
        <p class="forecast">{{forecastTag}}{{weatherForecast}}</p>
    </div>

{{>footer}}